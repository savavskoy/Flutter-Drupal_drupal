          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/lego_minifigures?offset=0&limit=25",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "lego_minifigures"
          ],
          "query": [
            {
              "key": "offset",
              "value": "0",
              "description": "Zero-based offset (optional, default: 0)"
            },
            {
              "key": "limit",
              "value": "25",
              "description": "Maximum number of records (optional, default: 25)"
            }
          ]
        },
        "description": "Retrieves a paginated list of all Lego minifigures. Returns data array with count, offset, and limit."
      },
      "response": []
    },
