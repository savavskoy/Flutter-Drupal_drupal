{
  "info": {
    "_postman_id": "lego-minifigures-api-001",
    "name": "Lego Minifigures REST API",
    "description": "Postman collection for testing Lego Minifigures REST API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "POST - User Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.sessid) {",
                  "        pm.collectionVariables.set(\"session_token\", jsonData.sessid);",
                  "        pm.collectionVariables.set(\"session_name\", jsonData.session_name);",
                  "    }",
                  "    if (jsonData.user) {",
                  "        pm.collectionVariables.set(\"user_id\", jsonData.user.uid);",
                  "        pm.collectionVariables.set(\"user_name\", jsonData.user.name);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "user",
                "login"
              ]
            },
            "description": "Login a user and get session token. Session cookies are automatically saved by Postman. Response includes sessid, session_name, and user object."
          },
          "response": []
        },
        {
          "name": "POST - User Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-CSRF-Token",
                "value": "{{session_token}}",
                "type": "text",
                "description": "CSRF token from login response"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/logout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "user",
                "logout"
              ]
            },
            "description": "Logout the current user session. Requires authentication (use login first)."
          },
          "response": []
        },
        {
          "name": "POST - User Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"newuser\",\n  \"mail\": \"newuser@example.com\",\n  \"pass\": \"securepassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "user",
                "register"
              ]
            },
            "description": "Register a new user account. Required fields: name (username), mail (email), pass (password). Returns the created user object."
          },
          "response": []
        },
				{
					"name": "GET - Get CSRF Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/services/session/token",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"services",
								"session",
								"token"
							]
						},
						"description": "Get CSRF token for authenticated requests. This is a Services module endpoint (not part of user resource). Returns token string."
					},
					"response": []
				},
        {
          "name": "GET - Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-CSRF-Token",
                "value": "{{session_token}}",
                "type": "text",
                "description": "CSRF token from login"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/user/{{user_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "user",
                "{{user_id}}"
              ]
            },
            "description": "Get current logged-in user details. Requires authentication (use login first)."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for user login, logout, and registration"
    },
    {
      "name": "GET - List All Minifigures",
      "request": {
        "method": "GET",
